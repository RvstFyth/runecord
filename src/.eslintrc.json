{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["plugin:prettier/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prefer-template": 1
    },
    "overrides": [
        {
            "files": [".js"],
            "rules": {
                "brace-style": "off"
            }
        }
    ]
}
